{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Events</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ event.id }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ event.city }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ event.address }}</td>
        </tr>
        <tr>
            <th>Quantity</th>
            <td>{{ event.quantity }}</td>
        </tr>
        <tr>
            <th>Private_status</th>
            <td>{{ event.privateStatus ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('events_index') }}">back to list</a>

    <a href="{{ path('events_edit', {'id': event.id}) }}">edit</a>

    {{ include('events/_delete_form.html.twig') }}
{% endblock %}
